# Run Scripts/Configs
font pango:Dejavu Sans Mono 9
set $mod Mod4
set $alt Mod1
# set $fn   XF86WakeUp
set $term gnome-terminal
set $textbookOpener ~/Meta/scripts/textbook_opener.sh
set $downloadOpener ~/Meta/scripts/download_pdf_opener.sh
bindsym $mod+Shift+d exec $downloadOpener
set $paperOpener ~/Meta/scripts/paper_opener.sh
set $listScripts ~/Meta/scripts/list_scripts.sh
set $semester_files_opener ~/Meta/scripts/semester_files_opener.sh
set $teaching_files_opener ~/Meta/scripts/teaching_files_opener.sh
set $browser firefox
set $selection_screenshot ~/Meta/scripts/selection_screenshot.sh
set $desk_screens ~/Meta/scripts/desk_screens.sh
set $laptop_screen ~/Meta/scripts/laptop_screen.sh
set $lock i3lock --color=#000000

set $gaps_inner 8
set $gaps_outer 6


# Default setup
gaps inner              0
gaps outer              0
new_window pixel        4
focus_follows_mouse     no
floating_modifier       $mod


# Workspace Names
