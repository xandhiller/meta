# Set colours:
set $darkblack	 "#000000"
set $black	     "#222222"
set $white	     "#FFFFFF"
set $wh          "#333333"
set $cyan        "#AAFFFF"
set $purple      "#DDA0DD"
set $transparent "#000000"
set $red		 "#AA9999"
set $darkred	 "#330000"
set $orange      "#DD7020"
set $darkorange  "#000000"
set $blue        "#5A65FF"
set $darkblue    "#2F3690"
set $grey        "#666666"
set $darkgrey    "#606060"
set $subtlegrey  "#353535"

# This colour is the highlight colour of windows.
set $col         "#5555FF"
set $acol        "#FFFFFF"
set $col2        "#BBBBBB"
set $acol2       "#FFFFFF"
set $col3        "#FFFFFF" 
set $acol3       "#FFFFFF"

#                         BORDER		BACKGROUND	  TEXT		  
client.focused		      $col	        $col          $col	    $acol
client.unfocused	      $col2	        $col2         $col2	    $acol2  
client.focused_inactive	  $col3	        $col3         $col3	    $acol3
client.urgent		      $grey	        $grey         $grey	    $grey  
client.placeholder        $grey	        $grey         $grey	    $grey  
client.background         $black

# Status Bar 
bar {
	font pango:mono 9
    status_command i3status
	position top
    strip_workspace_numbers no
    colors {
        set $background     "#AAAAAA"
        set $focus          "#DDDDDD"
        background          "#888888"
        statusline          "#000000"
        separator           $background
        focused_workspace   "#5555FF" $focus "#000000"
        active_workspace    "#CCCCCC" "#CCCCCC" "#000000"
        focused_background  "#AAAAAA" 
        inactive_workspace  $background $background "#000000"
  }  
  tray_padding 8
}
exec --no-startup-id xsetroot -solid "#DDDDDD"
exec --no-startup-id compton -f -i 0.75 --config ~/.config/compton.conf -b
exec --no-startup-id flashfocus
bindsym $mod+Delete exec --no-startup-id flash_window

# Scrot screen grabs
bindsym $mod+z exec --no-startup-id $selection_screenshot
bindsym $mod+F1 exec --no-startup-id $laptop_screen
bindsym $mod+F2 exec --no-startup-id $desk_screens

# bindsym $mod+n exec i3-input -F 'rename workspace to "'`i3-msg -t get_workspaces | jq '.[] | select(.visible == true)' | jq .num`': %s"' -P "new name? "

# Define, search, wikipedia and window access
