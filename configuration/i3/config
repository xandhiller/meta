bindsym $mod+$alt+8             workspace $ws18
bindsym $mod+$alt+9             workspace $ws19
bindsym $mod+$alt+0             workspace $ws20
# Move to a workspace and go there.
bindsym $mod+Shift+1            move container to workspace $ws1
