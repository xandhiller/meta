set page-padding 1
#set default-bg "#EEEEEE"


set statusbar-basename false
set statusbar-bg "#000000"
set statusbar-fg "#EEEEEE"


set completion-fg "#EEEEEE"
set completion-bg "#000000"
#set completion-highlight-fg "#000000"
#set completion-highlight-bg "#EEEEEE"
set completion-group-fg "#EEEEEE"
set completion-group-bg "#000000"
set inputbar-fg "#EEEEEE"
set inputbar-bg "#000000"
set default-fg "#EEEEEE"
set default-bg "#EEEEEE"
set scrollbar-fg "#EEEEEE"
set scrollbar-bg "#2222FF"


set highlight-color "#8888FF"
#set highlight-transparency 0.2


set recolor-darkcolor "#FFFFFF"
set recolor-lightcolor "#000000"
set recolor "false"



set first-page-column 2:1
# Change whether title page is in column 1 or 2.
map <C-1> feedkeys :set<Space>first-page-column<Space>2:1<Return>
map <C-2> feedkeys :set<Space>first-page-column<Space>1:2<Return>


set selection-clipboard null
# Turn on and off (respectively) clipboard selection 
map <C-c> feedkeys :set<Space>selection-clipboard<Space>clipboard<Return>
map <C-s> feedkeys :set<Space>selection-clipboard<Space>null<Return>
